    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "sourceRoot": "src"
    },
    "exclude": [
        "node_modules"
    ]
}
